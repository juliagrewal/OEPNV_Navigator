<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewDepLocLeg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewDepTimLeg"
        app:layout_constraintEnd_toStartOf="@+id/textViewDepTimLeg"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewDepTimLeg"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewDepLocLeg"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewTransportationLeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewArrLocLeg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewArrTimLeg"
        app:layout_constraintEnd_toStartOf="@+id/textViewArrTimLeg"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewArrTimLeg"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewArrLocLeg"
        app:layout_constraintTop_toBottomOf="@+id/textViewTransportationLeg" />


</androidx.constraintlayout.widget.ConstraintLayout>